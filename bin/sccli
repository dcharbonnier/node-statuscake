#!/bin/sh

':' //; exec "`command -v node || command -v nodejs`" "$0" "$@"

var conf = require(process.env["HOME"] + "/.statuscake.json");
var statuscake = require("statuscake");
var app = statuscake.app(conf);

if (process.argv[2] === "tests") {
  app.tests(function (err, data) {
    process.stdout.write(JSON.stringify(data));
  });
}
